{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",                                  
    "lib": ["es6"],                                      
    "module": "commonjs",                                
    "rootDir": ".",                                    
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true, 
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,   
    "emitDecoratorMetadata": true,                             
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  }
}
